<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_nav"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Navigation_Home"
    tools:openDrawer="start">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/material_tool_nav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3652ED"
                app:menu="@menu/main_menu"
                app:navigationIcon="@drawable/menu1"
                app:title="Home"
                app:titleTextColor="@color/white">

            </com.google.android.material.appbar.MaterialToolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xin chào"
                        android:id="@+id/txtXinchao"
                        android:layout_marginRight="5dp"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/txtNameUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xin chào"
                        android:textSize="20dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgviettel"
                        android:layout_width="200px"
                        android:layout_height="200px"
                        android:layout_margin="5dp"
                        android:src="@drawable/viettel" />

                    <ImageView
                        android:id="@+id/imgMobiphone"
                        android:layout_width="200px"
                        android:layout_height="200px"
                        android:layout_margin="5dp"
                        android:src="@drawable/mobiphone" />

                    <ImageView
                        android:id="@+id/imgVinaphone"
                        android:layout_width="200px"
                        android:layout_height="200px"
                        android:layout_margin="5dp"
                        android:src="@drawable/vinaphone" />

                    <ImageView
                        android:id="@+id/imgVietnammobile"
                        android:layout_width="200px"
                        android:layout_height="200px"
                        android:layout_margin="5dp"
                        android:src="@drawable/vietnamemobile" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/txt10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@color/VND"
                        android:padding="20dp"
                        android:layout_weight="1"
                        android:text="10.000VND"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@color/VND"
                        android:padding="20dp"
                        android:text="20.000VND"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt30"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@color/VND"
                        android:padding="20dp"
                        android:text="30.000VND"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left">

                    <TextView
                        android:id="@+id/txt50"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@color/VND"
                        android:layout_weight="1"
                        android:padding="20dp"
                        android:text="50.000VND"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt100"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@color/VND"
                        android:layout_weight="1"
                        android:padding="20dp"
                        android:text="100.000VND"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt200"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@color/VND"
                        android:padding="20dp"
                        android:text="200.000VND"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:gravity="left">

                    <TextView
                        android:id="@+id/txt300"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@color/VND"
                        android:padding="20dp"
                        android:text="300.000VND"
                        android:layout_weight="1"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt500"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@color/VND"
                        android:padding="20dp"
                        android:text="500.000VND"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/SoLuong"
                    android:padding="20dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Số lượng"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/SoLuong"

                        android:gravity="right"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:id="@+id/imgTru"
                            android:src="@drawable/tru3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text="1"
                            android:id="@+id/txtSoLuong"
                            android:textSize="30dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:id="@+id/imgCong"
                            android:layout_gravity="right"
                            android:src="@drawable/cong" />
                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:id="@+id/btnMuangay"
                    android:text="Mua ngay"
                    android:background="@color/colorPrimaryDark"/>
            </LinearLayout>
        </com.google.android.material.appbar.AppBarLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/bg_navigation"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu">

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>